<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    app:cardElevation="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:tools="http://schemas.android.com/tools"

    android:elevation="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="0dp"
            android:layout_weight=".5">
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/imgbasket"
                tools:src="@drawable/banner4"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".5"
                android:layout_marginStart="16dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:id="@+id/txttitlebasket"
                    android:layout_marginRight="8dp"
                    android:gravity="center_vertical|right"
                    tools:text="گوشی آیفون"
                    android:layout_height="0dp"
                    android:layout_weight=".3"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="#40292424"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:layout_marginRight="8dp"
                    android:gravity="center_vertical|right"
                    android:text="تعداد :"
                    android:layout_marginTop="5dp"
                    android:layout_height="0dp"
                    android:layout_weight=".2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:id="@+id/txtnumberbasket"
                    android:layout_marginRight="8dp"
                    android:gravity="center_vertical|right"
                    tools:text="5 "
                    android:layout_height="0dp"
                    android:layout_weight=".3"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="#40292424"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".2">
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dp"
                android:layout_marginStart="16dp"
                android:text="قیمت محصول :"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical|right"
                android:id="@+id/txtpricebasket"
                android:layout_marginRight="5dp"
                android:textColor="#9E0E0E"
                tools:text="2000000"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="#40292424"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".2">
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dp"
                android:text="قیمت کل محصول :"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_weight=".5"/>
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dp"
                android:id="@+id/txtpricetotalbasket"
                android:textColor="#409E0E"
                tools:text="2000000"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="#40292424"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:id="@+id/txtdeletefrombasket"
            android:text="حذف"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:paddingBottom="5dp"
            android:textColor="#9E0E0E"/>


    </LinearLayout>



</android.support.v7.widget.CardView>