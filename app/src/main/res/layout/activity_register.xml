<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar2"
        android:id="@+id/tooolbar"/>
    <LinearLayout
        android:layout_below="@id/tooolbar"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">




        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_phone_android_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginStart="20dp"
            android:gravity="right"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="11"
            android:id="@+id/txt_phone_register"
            android:drawableTint="#585858"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:hint="تلفن همراه"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginStart="20dp"
            android:gravity="right"
            android:inputType="textEmailAddress"
            android:id="@+id/txt_email_register"
            android:maxLines="1"
            android:maxLength="30"
            android:drawableTint="#585858"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:hint="پست الکترونیک"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_lock_open_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginStart="20dp"
            android:gravity="right"
            android:inputType="textPassword"
            android:id="@+id/txt_password_register"
            android:maxLines="1"
            android:maxLength="20"
            android:drawableTint="#585858"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:hint="رمزعبور"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_home_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginStart="20dp"
            android:gravity="right"
            android:inputType="textEmailAddress"
            android:id="@+id/txt_address_register"
            android:maxLines="50"
            android:maxLength="500"
            android:drawableTint="#585858"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:hint="نشانی"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:id="@+id/chk_show_pass_register"
            android:layout_height="wrap_content"
            android:text="نمایش رمز عبور "/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card_Register"
        android:layout_alignParentBottom="true"
        android:elevation="6dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9E1515"
            android:gravity="center_vertical"
            android:text="عضویت در فروشگاه"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>


</RelativeLayout>
