<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:id="@+id/cardview_off"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    android:layoutDirection="rtl"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_off"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                tools:src="@drawable/banner4"
                android:scaleType="centerInside"/>
            <jp.shts.android.library.TriangleLabelView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:backgroundColor="#D83000"
                app:corner="leftTop"
                app:labelBottomPadding="6dp"
                android:id="@+id/triangle_off"
                app:labelCenterPadding="5dp"
                app:labelTopPadding="25dp"
                app:primaryText="تخفیف"
                app:primaryTextColor="@color/yellow"
                app:primaryTextSize="16sp"
                app:secondaryText="20%"
                app:secondaryTextColor="@color/black"
                app:secondaryTextSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <View
                android:layout_width="2dp"
                android:id="@+id/vieww"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#272727"
                />

            <com.example.herbaldrugsdemo.Assets.CustomFontTextView
                android:id="@+id/product_off_name"
                android:textSize="10sp"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@id/vieww"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/standard_margin"
                tools:text="قرص تقویتی " />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:orientation="horizontal">
            <com.example.herbaldrugsdemo.Assets.CustomFontTextView
                android:textSize="10sp"
                android:id="@+id/product_off_price"
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                tools:text="5000" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:orientation="horizontal"
                android:gravity="left|center_vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/ic_visibility_black_24dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_width="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="9dp"
                    android:layout_height="match_parent"
                    android:text="20"/>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>